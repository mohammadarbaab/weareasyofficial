<section class="featured-collection">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="fc-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="fc-description">{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="fc-grid">
        {% for product in section.settings.collection.products limit: section.settings.products_limit %}
          <div class="fc-card">
            <a href="{{ product.url }}">
              <div class="fc-image">
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.title }}"
                  loading="lazy"
                >
              </div>
              <h3 class="fc-title">{{ product.title }}</h3>
              <p class="fc-price">{{ product.price | money }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Select a collection</p>
    {% endif %}

  </div>
</section>

<style>
.featured-collection {
  padding: 60px 20px;
}

.page-width {
  max-width: 1300px;
  margin: auto;
}

.fc-heading {
  font-size: 28px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.fc-description {
  font-size: 15px;
  margin-bottom: 40px;
  color: #555;
}

.fc-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

.fc-card a {
  text-decoration: none;
  color: inherit;
}

.fc-image {
  background: #f2f2f2;
  padding: 20px;
}

.fc-image img {
  width: 100%;
  height: auto;
  display: block;
}

.fc-title {
  font-size: 14px;
  margin-top: 12px;
  text-transform: uppercase;
}

.fc-price {
  font-size: 14px;
  margin-top: 5px;
}

/* Tablet */
@media (max-width: 1024px) {
  .fc-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile */
@media (max-width: 600px) {
  .fc-grid {
    grid-template-columns: 1fr;
  }

  .fc-heading {
    font-size: 22px;
  }
}
</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Tees"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur donec sodales sed nibh id vehicula."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

<section class="featured-collection">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="fc-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="fc-description">{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.products.size > 0 %}
      <div class="fc-grid">
        {% for product in section.settings.products limit: section.settings.products_limit %}
          <div class="fc-card">

              <div class="fc-image">
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.title }}"
                  loading="lazy"
                >
              </div>

              <h3 class="fc-title">{{ product.title }}</h3>
              <p class="fc-price">{{ product.price | money }}</p>

              <form method="post" action="/cart/add" class="fc-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="fc-btn">
                  Add to Cart
                </button>
              </form>

          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Select products</p>
    {% endif %}

  </div>
</section>

<style>
.featured-collection {
  padding: 70px 20px;
}

.page-width {
  max-width: 1300px;
  margin: auto;
}

.fc-heading {
  font-size: 28px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.fc-description {
  font-size: 15px;
  margin-bottom: 40px;
  color: #555;
}

.fc-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

.fc-card {
  display: flex;
  flex-direction: column;
}

.fc-image {
  width: 100%;
  aspect-ratio: 1 / 1;
  background: #f2f2f2;
  overflow: hidden;
}

.fc-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.fc-card:hover .fc-image img {
  transform: scale(1.05);
}

.fc-title {
  font-size: 14px;
  margin-top: 14px;
  text-transform: uppercase;
}

.fc-price {
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 12px;
}

.fc-btn {
  width: 100%;
  height: 42px;
  background-color: #111;
  color: #fff;
  border: none;
  text-transform: uppercase;
  font-size: 12px;
  letter-spacing: 1px;
  cursor: pointer;
  transition: 0.3s ease;
}

.fc-btn:hover {
  background-color: #333;
}

@media (max-width: 1024px) {
  .fc-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .fc-grid {
    grid-template-columns: 1fr;
  }

  .fc-heading {
    font-size: 22px;
  }
}
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Selling Tees"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium knit polos designed for everyday comfort and confident style."
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Select Products"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
<section class="featured-collection">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="fc-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="fc-description">{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.products.size > 0 %}
      <div class="fc-grid">
        {% for product in section.settings.products limit: section.settings.products_limit %}
          <div class="fc-card">

              <div class="fc-image">
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.title }}"
                  loading="lazy"
                >
              </div>

              <h3 class="fc-title">{{ product.title }}</h3>
              <p class="fc-price">{{ product.price | money }}</p>

              <form method="post" action="/cart/add" class="fc-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="fc-btn">
                  Add to Cart
                </button>
              </form>

          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Select products</p>
    {% endif %}

  </div>
</section>

<style>
.featured-collection {
  padding: 90px 20px;
  background: #ffffff;
}

.page-width {
  max-width: 1300px;
  margin: auto;
}

/* Heading */
.fc-heading {
  font-size: 30px;
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
  margin-bottom: 12px;
  text-align: center;
}

.fc-description {
  font-size: 15px;
  color: #666;
  text-align: center;
  max-width: 600px;
  margin: 0 auto 60px;
  line-height: 1.6;
}

/* Grid */
.fc-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40px;
}

/* Card */
.fc-card {
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
}

.fc-card:hover {
  transform: translateY(-6px);
}

/* Image */
.fc-image {
  width: 100%;
  aspect-ratio: 1 / 1;
  background: #f5f5f5;
  overflow: hidden;
  border-radius: 6px;
}

.fc-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.fc-card:hover .fc-image img {
  transform: scale(1.08);
}

/* Title */
.fc-title {
  font-size: 15px;
  font-weight: 500;
  margin-top: 18px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Price */
.fc-price {
  font-size: 14px;
  margin-top: 6px;
  margin-bottom: 16px;
  color: #111;
  font-weight: 500;
}

/* Button */
.fc-btn {
  width: 100%;
  height: 44px;
  background: transparent;
  border: 1px solid #111;
  color: #111;
  text-transform: uppercase;
  font-size: 12px;
  letter-spacing: 1.5px;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 3px;
}

.fc-btn:hover {
  background: #111;
  color: #fff;
}

/* Tablet */
@media (max-width: 1024px) {
  .fc-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .fc-grid {
    grid-template-columns: 1fr;
  }

  .fc-heading {
    font-size: 24px;
  }

  .fc-description {
    font-size: 14px;
    margin-bottom: 40px;
  }
}
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Selling Tees"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium knit polos designed for everyday comfort and confident style."
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Select Products"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
<section class="featured-collection">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="fc-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="fc-description">{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.products.size > 0 %}
      <div class="fc-grid">
        {% for product in section.settings.products limit: section.settings.products_limit %}
          <div class="fc-card">
            <a href="{{ product.url }}">
              
              <div class="fc-image">
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.title }}"
                  loading="lazy"
                >
              </div>

              <h3 class="fc-title">{{ product.title }}</h3>
              <p class="fc-price">{{ product.price | money }}</p>

            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Select products</p>
    {% endif %}

  </div>
</section>

<style>
/* Section spacing */
.featured-collection {
  padding: 60px 20px;
}

/* Container */
.page-width {
  max-width: 1300px;
  margin: auto;
}

/* Heading */
.fc-heading {
  font-size: 28px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

/* Description */
.fc-description {
  font-size: 15px;
  margin-bottom: 40px;
  color: #555;
}

/* Grid */
.fc-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

/* Card */
.fc-card {
  height: 100%;
}

.fc-card a {
  text-decoration: none;
  color: inherit;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Image wrapper (IMPORTANT PART) */
.fc-image {
  width: 100%;
  aspect-ratio: 1 / 1;   /* ðŸ‘ˆ sab images same size */
  /* aspect-ratio: 3 / 4; */

  background: #f2f2f2;
  overflow: hidden;
}

/* Image */
.fc-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;    /* ðŸ‘ˆ crop hoga but equal size */
  display: block;
  transition: transform 0.4s ease;
}

/* Hover effect (optional but sexy ðŸ˜„) */
.fc-card a:hover .fc-image img {
  transform: scale(1.08);
}

/* Title */
.fc-title {
  font-size: 14px;
  margin-top: 12px;
  text-transform: uppercase;
}

/* Price */
.fc-price {
  font-size: 14px;
  margin-top: 5px;
}

/* Tablet */
@media (max-width: 1024px) {
  .fc-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile */
@media (max-width: 600px) {
  .fc-grid {
    grid-template-columns: 1fr;
  }

  .fc-heading {
    font-size: 22px;
  }
}
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Tees"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur donec sodales sed nibh id vehicula."
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Select Products"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

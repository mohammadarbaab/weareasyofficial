<section class="custom-newsletter">
  <div class="newsletter-wrapper">

    {% if section.settings.heading != blank %}
      <h2 class="newsletter-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subtext != blank %}
      <p class="newsletter-subtext">
        {{ section.settings.subtext }}
      </p>
    {% endif %}

    <form
      method="post"
      action="/contact#contact_form"
      accept-charset="UTF-8"
      class="newsletter-form">
      <input
        type="hidden"
        name="form_type"
        value="customer">
      <input
        type="hidden"
        name="contact[tags]"
        value="newsletter">

      <div class="newsletter-input-wrapper">
        <input
          type="email"
          name="contact[email]"
          class="newsletter-input"
          placeholder="EMAIL"
          required>
        <button type="submit" class="newsletter-button">
          â†’
        </button>
      </div>
    </form>

  </div>
</section>

<style>
  .custom-newsletter {
    background: #f3f3f3;
    padding: 60px 20px;
    text-align: center;
  }

  .newsletter-wrapper {
    max-width: 520px;
    /* ðŸ‘ˆ thoda chota aur professional */
    margin: 0 auto;
  }

  .newsletter-heading {
    font-size: 26px;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 26px;
    font-weight: 500;
  }

  .newsletter-subtext {
    font-size: 14px;
    color: #666;
    margin-bottom: 26px;
  }

  /* FORM */
  .newsletter-form {
    width: 100%;
  }

  /* ðŸ‘‡ Input ko chota aur perfectly center */
  .newsletter-input-wrapper {
    display: flex;
    width: 100%;
    max-width: 400px;
    /* ðŸ‘ˆ email width control */
    margin: 0 auto;
    /* ðŸ‘ˆ perfect center */
    border: 1px solid #dcdcdc;
    /* background: #fff; */
  }

  /* INPUT */
  .newsletter-input {
    flex: 1;
    border: none;
    padding: 14px 16px;
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    background: transparent;
    outline: none;
  }

  /* BUTTON */
  .newsletter-button {
    width: 55px;
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: 18px;
    transition: background 0.3s ease;
  }

  .newsletter-button:hover {
    background: #f0f0f0;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .custom-newsletter {
      padding: 70px 20px;
    }

    .newsletter-heading {
      font-size: 20px;
    }

    .newsletter-input-wrapper {
      max-width: 100%;
    }
  }
</style>

{% schema %}
  {
    "name": "Custom Newsletter",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "SUBSCRIBE TO OUR EMAILS"
      }, {
        "type": "textarea",
        "id": "subtext",
        "label": "Sub Text",
        "default": "Be the first to know about new collections and exclusive offers."
      }
    ],
    "presets": [
      {
        "name": "Custom Newsletter"
      }
    ]
  }
{% endschema %}
<style>

/* MAIN FOOTER */

.copyright-section{
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #e5e5e5;
}
.main-footer-container {
  padding: 60px 40px 30px;
}

/* TOP SECTION */
.footer-top-container {
  /* max-width: 1200px; */
  margin: auto;
  padding-bottom: 40px;
}

.footer-navbar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 40px;
}

.footer-navbar h4,
.footer-navbar p {
  margin: 0;
}

/* LOGO */
.footer-logo h4 {
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 1px;
}

/* LINKS */
.links {
  display: flex;
  flex-direction: column;
  width: 200px;
}

.links h4 {
  margin-bottom: 15px;
  font-size: 13px;
  letter-spacing: 1px;
}

.links a {
  text-decoration: none;
  color: #000;
  font-size: 14px;
  margin-bottom: 8px;
  transition: 0.3s ease;
}

.links a:hover {
  opacity: 0.6;
}

/* BRAND */
.brand {
  width: 300px;
}

.brand h4 {
  margin-bottom: 15px;
  font-size: 13px;
  letter-spacing: 1px;
}

.brand p {
  font-size: 14px;
  line-height: 1.6;
}

/* BOTTOM SECTION */
.input-main-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* max-width: 1200px; */
  margin: auto;
  /* padding-top: 25px; */
  /* border-top: 1px solid #e5e5e5; */
}

/* NEWSLETTER */
.input-container {
  max-width: 400px;
  width: 100%;
}

.newsletter-title {
  font-size: 13px;
  margin-bottom: 10px;
  letter-spacing: 1px;
}

.newsletter-input-wrapper-footer {
  display: flex;
  border: 1px solid #ddd;
}

.newsletter-input-footer {
  flex: 1;
  border: none;
  padding: 12px 15px;
  font-size: 12px;
  text-transform: uppercase;
  outline: none;
}

.newsletter-button-footer {
  width: 55px;
  border: none;
  background: transparent;
  cursor: pointer;
  font-size: 18px;
  transition: 0.3s;
}

.newsletter-button-footer:hover {
  background: #f5f5f5;
}

/* SOCIAL MEDIA PERFECT SIZE */
.social-media-container {
  display: flex;
  align-items: center;
  gap: 20px;
}

.social-media-container img {
  width: 18px;     /* Perfect professional size */
  height: 18px;
  object-fit: contain;
  transition: 0.3s ease;
}

.social-media-container img:hover {
  opacity: 0.6;
  transform: translateY(-2px);
}

/* RESPONSIVE */
@media (max-width: 992px) {

  .footer-navbar {
    flex-wrap: wrap;
  }

  .footer-logo,
  .links,
  .brand {
    width: 100%;
  }

  .input-main-container {
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }

  .social-media-container {
    margin-top: 10px;
  }
}

</style>

{% schema %}
  {
    "name": "Custom Footer",
    "settings": [
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo / Brand Name",
        "default": "YOUR BRAND"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Add your brand description here."
      }
    ],
    "blocks": [
      {
        "type": "link",
        "name": "Footer Link",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Link Label",
            "default": "Privacy Policy"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Footer"
      }
    ]
  }
{% endschema %}
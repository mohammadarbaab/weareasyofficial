<footer class="footer">
  <div class="footer-top">
    
    <!-- Brand -->
    <div class="footer-col brand">
      <h2>{{ shop.name }}</h2>
    </div>

    <!-- Links -->
    <div class="footer-col">
      <h4>LINKS</h4>
      <ul>
        {% for link in linklists[section.settings.footer_menu_1].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Legal -->
    <div class="footer-col">
      <h4>LEGAL</h4>
      <ul>
        {% for link in linklists[section.settings.footer_menu_2].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- About -->
    <div class="footer-col about">
      <h4>THE BRAND</h4>
      <p>{{ section.settings.about_text }}</p>
    </div>

  </div>

  <!-- Newsletter + Social -->
  <div class="footer-middle">

    <div class="newsletter">
      <h4>SIGN UP FOR 15% OFF</h4>

      {% form 'customer' %}
        <div class="email-box">
          <input type="email"
                 name="contact[email]"
                 placeholder="EMAIL"
                 required>
          <button type="submit">→</button>
        </div>
      {% endform %}
    </div>

    <div class="socials">
      {% if settings.social_twitter_link != blank %}
        <a href="{{ settings.social_twitter_link }}"><i class="fab fa-twitter"></i></a>
      {% endif %}

      {% if settings.social_facebook_link != blank %}
        <a href="{{ settings.social_facebook_link }}"><i class="fab fa-facebook-f"></i></a>
      {% endif %}

      {% if settings.social_instagram_link != blank %}
        <a href="{{ settings.social_instagram_link }}"><i class="fab fa-instagram"></i></a>
      {% endif %}

      {% if settings.social_youtube_link != blank %}
        <a href="{{ settings.social_youtube_link }}"><i class="fab fa-youtube"></i></a>
      {% endif %}
    </div>

  </div>

  <!-- Bottom -->
  <div class="footer-bottom">
    <div class="payments">
      {{ shop.enabled_payment_types | payment_type_svg_tag }}
    </div>

    <p>
      © {{ 'now' | date: "%Y" }}, {{ shop.name }}. 
      All rights reserved.
    </p>
  </div>
</footer>

{%- style -%}
  .footer {
  background: orange;
  padding: 60px 80px 30px;
  color: #000;
}

.footer-top {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr 1.5fr;
  gap: 60px;
}

.footer-col h4 {
  font-size: 13px;
  letter-spacing: 1px;
  margin-bottom: 15px;
}

.footer-col ul {
  list-style: none;
}

.footer-col ul li {
  margin-bottom: 8px;
}

.footer-col ul li a {
  text-decoration: none;
  color: #000;
  font-size: 14px;
}

.brand h2 {
  font-size: 28px;
  letter-spacing: 2px;
}

.about p {
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}

.footer-middle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50px 0;
}

.newsletter h4 {
  font-size: 13px;
  margin-bottom: 10px;
}

.email-box {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  width: 260px;
}

.email-box input {
  border: none;
  padding: 12px;
  width: 100%;
  outline: none;
}

.email-box button {
  padding: 0 15px;
  border: none;
  background: transparent;
  cursor: pointer;
}

.socials i {
  margin-left: 18px;
  font-size: 16px;
  cursor: pointer;
}

.footer-bottom {
  border-top: 1px solid #eee;
  padding-top: 20px;
  text-align: center;
}

.payments {
  margin-bottom: 15px;
}

.footer-bottom p {
  font-size: 12px;
  color: #555;
  line-height: 1.6;
}

/* RESPONSIVE */
@media (max-width: 992px) {
  .footer {
    padding: 40px 30px;
  }

  .footer-top {
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .footer-middle {
    flex-direction: column;
    align-items: flex-start;
    gap: 30px;
  }

  .socials i {
    margin-left: 0;
    margin-right: 18px;
  }
}

@media (max-width: 576px) {
  .footer-top {
    grid-template-columns: 1fr;
  }

  .email-box {
    width: 100%;
  }

  .footer-bottom p {
    font-size: 11px;
  }
}
{%- endstyle -%}

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Footer Menu 1"
    },
    {
      "type": "link_list",
      "id": "footer_menu_2",
      "label": "Footer Menu 2"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About Text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }
  ]
}
{% endschema %}

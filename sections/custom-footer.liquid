      "label": "Menu 3 Title",
      "default": "ABOUT"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Select Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 Title",
      "default": "LEGAL"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Select Menu 2"
    },
    {

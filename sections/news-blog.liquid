<section class="news-section">
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h2 class="news-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="news-grid">
      {% for block in section.blocks %}
        <div class="news-card" {{ block.shopify_attributes }}>
          
          {% if block.settings.image != blank %}
            <a href="{{ block.settings.link }}">
              <img 
                src="{{ block.settings.image | img_url: '800x' }}" 
                alt="{{ block.settings.title }}">
            </a>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="news-title">
              <a href="{{ block.settings.link }}">
                {{ block.settings.title }} →
              </a>
            </h3>
          {% endif %}

          {% if block.settings.date != blank %}
            <p class="news-date">{{ block.settings.date }}</p>
          {% endif %}

          {% if block.settings.text != blank %}
            <p class="news-text">{{ block.settings.text }}</p>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.news-section {
  padding: 80px 40px; /* padding-x added */
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
}

.news-heading {
  font-size: 20px;
  letter-spacing: 2px;
  margin-bottom: 40px;
  text-transform: uppercase;
}

/* GRID */
.news-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
}

/* CARD */
.news-card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* IMAGE – SAME SIZE ALWAYS */
.news-card > a {
  display: block;
  width: 100%;
  aspect-ratio: 4 / 5;
  overflow: hidden;
  margin-bottom: 16px;
}

.news-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* TEXT – ALL EQUAL HEIGHT */
.news-title {
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 8px;
  min-height: 44px; /* equal title height */
}

.news-title a {
  color: #000;
  text-decoration: underline;
}

.news-date {
  font-size: 11px;
  color: #777;
  margin-bottom: 10px;
  min-height: 16px;
}

.news-text {
  font-size: 13px;
  line-height: 1.6;
  color: #000;
  min-height: 78px; /* equal description height */
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 1024px) {
  .news-section {
    padding: 60px 30px;
  }

  .news-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

@media (max-width: 768px) {
  .news-section {
    padding: 50px 20px;
  }

  .news-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .news-card > a {
    aspect-ratio: 3 / 4;
  }

  .news-title,
  .news-text {
    min-height: unset; /* mobile pe natural height */
  }
}

</style>

{% schema %}
{
  "name": "News Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NEWS"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "News Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "News Grid"
    }
  ]
}
{% endschema %}

<section class="news-section">
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h2 class="news-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="news-grid">
      {% for block in section.blocks %}
        <div class="news-card" {{ block.shopify_attributes }}>
          
          {% if block.settings.image != blank %}
            <a href="{{ block.settings.link }}">
              <img 
                src="{{ block.settings.image | img_url: '800x' }}" 
                alt="{{ block.settings.title }}">
            </a>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="news-title">
              <a href="{{ block.settings.link }}">
                {{ block.settings.title }} â†’
              </a>
            </h3>
          {% endif %}

          {% if block.settings.date != blank %}
            <p class="news-date">{{ block.settings.date }}</p>
          {% endif %}

          {% if block.settings.text != blank %}
            <p class="news-text">{{ block.settings.text }}</p>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.news-section {
  padding: 80px 0;
}

.news-heading {
  font-size: 20px;
  letter-spacing: 2px;
  margin-bottom: 40px;
}

.news-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
}

.news-card img {
  width: 100%;
  display: block;
  margin-bottom: 16px;
}

.news-title {
  font-size: 14px;
  margin-bottom: 8px;
}

.news-title a {
  text-decoration: underline;
  color: #000;
}

.news-date {
  font-size: 11px;
  color: #777;
  margin-bottom: 12px;
}

.news-text {
  font-size: 13px;
  line-height: 1.6;
  color: #333;
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 1024px) {
  .news-grid {
    gap: 30px;
  }
}

@media (max-width: 768px) {
  .news-grid {
    grid-template-columns: 1fr;
  }

  .news-section {
    padding: 50px 20px;
  }
}
</style>

{% schema %}
{
  "name": "News Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NEWS"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "News Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "News Grid"
    }
  ]
}
{% endschema %}

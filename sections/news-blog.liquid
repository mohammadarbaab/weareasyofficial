<section class="news-section">
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h2 class="news-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="news-grid">
      {% for block in section.blocks %}
        <div class="news-card" {{ block.shopify_attributes }}>
          
          {% if block.settings.image != blank %}
            <a href="{{ block.settings.link }}" class="news-image">
              <img 
                src="{{ block.settings.image | image_url: width: 1000 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            </a>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="news-title">
              <a href="{{ block.settings.link }}">
                {{ block.settings.title }}
              </a>
            </h3>
          {% endif %}

          {% if block.settings.date != blank %}
            <p class="news-date">{{ block.settings.date }}</p>
          {% endif %}

          {% if block.settings.text != blank %}
            <div class="news-text">
              {{ block.settings.text }}
            </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.news-section {
  padding: 80px 60px;
}

.news-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  column-gap: 40px;
  row-gap: 40px; /* thoda kam */
}

/* CARD */
.news-card {
  display: flex;
  flex-direction: column;
  gap: 6px; /* ðŸ‘ˆ sab elements ke beech controlled gap */
}

/* IMAGE */
.news-image {
  position: relative;
  width: 100%;          /* 105% hata diya */
  padding-top: 65%;     /* aapka ratio same rakha */
  overflow: hidden;
  background: #eaeaea;
  margin-bottom: 6px;   /* ðŸ‘ˆ image ke niche kam gap */
}

.news-image img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;         /* 120% hata diya */
  object-fit: cover;
}

/* TITLE */
.news-title {
  font-size: 13px;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  margin: 0;            /* ðŸ‘ˆ margin remove */
  line-height: 1.3;
}

/* DATE */
.news-date {
  font-size: 11px;
  color: #8c8c8c;
  margin: 2px 0 6px 0;  /* ðŸ‘ˆ very tight spacing */
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* TEXT */
.news-text {
  font-size: 13px;
  line-height: 1.6;
  margin: 0;            /* ðŸ‘ˆ extra margin remove */

  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

{% schema %}
{
  "name": "News Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NEWS"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "News Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "News Grid"
    }
  ]
}
{% endschema %}
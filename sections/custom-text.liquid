<section>
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.text }}</p>
</section>

{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Share information about your brand"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Describe a product, make announcements, or welcome customers to your store."
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

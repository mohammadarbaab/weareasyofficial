<section class="custom-text-container">
  {% comment %} <h2>{{ section.settings.heading }}</h2> {% endcomment %}
  <p class="custom-text-content">
    {{ section.settings.text }}
  </p>
</section>

<style>
  .custom-text-container {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 50px 20px;
    background-color: #f2f2f2;
    margin-top: 30px;
  }

  .custom-text-content {
    max-width: 800px;
    width: 100%;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .custom-text-container {
      padding: 35px 20px;
    }

    .custom-text-content {
      font-size: 15px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .custom-text-container {
      padding: 35px 25px;
    }

    .custom-text-content {
      font-size: 14px;
      line-height: 1.5;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .custom-text-container {
      padding: 35px 20px;
    }

    .custom-text-content {
      font-size: 13.5px;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Share information about your brand"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Describe a product, make announcements, or welcome customers to your store."
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

<section class="image-text-split">
  <div class="its-wrapper">

    <!-- LEFT IMAGE -->
    <div class="its-image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="Section image"
          loading="lazy"
        >
      {% endif %}
    </div>

    <!-- RIGHT CONTENT -->
    <div class="its-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="its-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

  </div>
</section>

<style>
.image-text-split {
  padding: 80px 0;
  background: #fff;
}

.its-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  max-width: 1400px;
  margin: auto;
  gap: 60px;
}

/* Image */
.its-image img {
  width: 100%;
  height: auto;
  display: block;
}

/* Content */
.its-content {
  max-width: 420px;
}

.its-content h2 {
  font-size: 14px;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  margin-bottom: 15px;
}

.its-content p {
  font-size: 13px;
  line-height: 1.7;
  color: #555;
  margin-bottom: 25px;
}

/* Button */
.its-btn {
  display: inline-block;
  padding: 10px 22px;
  background: #000;
  color: #fff;
  font-size: 11px;
  letter-spacing: 1px;
  text-transform: uppercase;
  text-decoration: none;
  transition: background 0.3s ease;
}

.its-btn:hover {
  background: #333;
}

/* Mobile */
@media (max-width: 900px) {
  .its-wrapper {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .its-content {
    padding: 0 20px;
  }
}
</style>

{% schema %}
{
  "name": "Image Text Split",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DISCOVER DENIM"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec cursus venenatis diam id porta. In aliquet tristique felis blandit vehicula. Ut laoreet ipsum in diam tempor lobortis."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Image with Text (Split)"
    }
  ]
}
{% endschema %}

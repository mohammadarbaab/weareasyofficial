<section class="image-text-split">
  <div class="its-wrapper">

    <!-- LEFT IMAGE -->
    <div class="its-image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="Section image"
          loading="lazy">
      {% endif %}
    </div>

    <!-- RIGHT CONTENT -->
    <div class="its-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="its-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

  </div>
</section>

<style>
  .image-text-split {
    padding: 40px 20px;
    /* background: #fff; */
    /* background: orange; */

  }

  .its-wrapper {
    display: flex;

    /*
   align-items: center; 
   justify-content: center;
*/
    max-width: 1300px;
    margin: auto;
    gap: 20px;
    /* background-color: cadetblue; */
  }


  /* Image */
  .its-image img {
    width: 90%;
    height: 100%;
    display: block;
  }

  /* Content */
  .its-content {
    max-width: 460px;
    /* background-color: coral; */
    /* display: flex padding: 0 40px; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .its-content h2 {
    font-size: 14px;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    margin-bottom: 15px;
  }

  .its-content p {
    font-size: 13px;
    line-height: 1.7;
    color: #555;
    margin-bottom: 25px;
  }

  /* Button */
  .its-btn {
    display: inline-block;
    padding: 10px 22px;
    background: #000;
    color: #fff;
    font-size: 11px;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .its-btn:hover {
    background: #333;
  }

  /* Mobile */
 /* =========================
   RESPONSIVE ONLY
   Desktop untouched
========================= */

/* Tablet */
@media (max-width: 1023px) {
  .its-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: aqua;
    justify-content: center;
  }

  .its-image {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .its-image img {
    max-width: 100%; 
  }

  .its-content {
    max-width: 100%;
    padding: 0 15px;
  }
}

/* Mobile */
@media (max-width: 768px) {
  .its-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: aqua;
    justify-content: center;
  }

  .its-image {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .its-image img {
    max-width: 100%; 
  }

  .its-content {
    max-width: 100%;
    padding: 0 15px;
  }
}

/* Small mobile */
@media (max-width: 480px) {
  .image-text-split {
    padding: 40px 15px;
    background-color: bisque;
  }

  .its-content h2 {
    font-size: 13px;
  }

  .its-content p {
    font-size: 12.5px;
  }
  .its-image {
    width: 100%;
  }

}

</style>

{% schema %}
  {
    "name": "Image Text Split",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Left Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "DISCOVER DENIM"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec cursus venenatis diam id porta. In aliquet tristique felis blandit vehicula. Ut laoreet ipsum in diam tempor lobortis."
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Image with Text (Split)"
      }
    ]
  }
{% endschema %}
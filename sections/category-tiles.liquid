<div class="category-tiles-section">
  <h2 class="category-tiles-title">Shop by Category</h2>
  <div class="category-tiles-grid">
    {% assign categories = 
      "Tshirts,/collections/tshirts|Pants,/collections/pants|Jackets,/collections/jackets" | split: "|" %}

    {% for cat in categories %}
      {% assign parts = cat | split: "," %}
      {% assign name = parts[0] %}
      {% assign link = parts[1] %}
      <a href="{{ link }}" class="category-tile">
        <div class="category-tile-inner">
          <div class="category-tile-name">{{ name }}</div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
.category-tiles-section {
  padding: 40px 20px;
  text-align: center;
}
.category-tiles-title {
  font-size: 28px;
  margin-bottom: 30px;
}
.category-tiles-grid {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}
.category-tile {
  display: block;
  width: 200px;
  height: 150px;
  background: #f5f5f5;
  border-radius: 12px;
  text-decoration: none;
  color: #000;
  transition: all 0.3s ease;
}
.category-tile:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 15px rgba(0,0,0,0.1);
}
.category-tile-inner {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.category-tile-name {
  font-size: 18px;
  font-weight: 600;
}
</style>

{% schema %}
{
  "name": "Category Tiles",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Category Tiles",
      "category": "Custom"
    }
  ]
}
{% endschema %}

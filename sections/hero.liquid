.custom-hero__btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;

  background-color: #f4f4f4;     /* soft light gray */
  color: #111111;

  padding: 12px 32px;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1.6px;
  text-transform: uppercase;

  text-decoration: none;
  border-radius: 2px;
  border: 1px solid #e0e0e0;

  transition: all 0.25s ease;
  cursor: pointer;
  pointer-events: auto;
}

/* HOVER */
.custom-hero__btn:hover {
  background-color: #111111;
  color: #ffffff;
  border-color: #111111;
}

/* ACTIVE */
.custom-hero__btn:active {
  transform: scale(0.97);
}

/* FOCUS (ACCESSIBILITY) */
.custom-hero__btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 2px rgba(0,0,0,0.15);
}

/* MOBILE */
.hide-mobile {
  display: none;
}


<style>


  /*
   =========================
   BASE HERO
   =========================
*/
  .custom-hero {
    width: 100%;
    overflow: hidden;
  }

  .custom-hero__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .custom-hero__slider {
    display: contents;
  }

  .custom-hero__slide {
    position: relative;
  }

  .custom-hero__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }


  /*
   =========================
   TEXT OVERLAY
   =========================
*/
  .custom-hero__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #fff;
    padding: 20px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.45);
    pointer-events: none;
    /* prevent overlay from blocking clicks */
  }

  .custom-hero__content h1 {
    font-size: clamp(20px, 3vw, 36px);
    letter-spacing: 2px;
    margin-bottom: 10px;
  }

  .custom-hero__content p {
    font-size: clamp(12px, 1.5vw, 16px);
    margin-bottom: 18px;
  }

  .custom-hero__btn {
    background: #fff;
    color: #000;
    padding: 12px 26px;
    text-decoration: none;
    font-size: 12px;
    letter-spacing: 1px;
    pointer-events: auto;
    /* button clickable */
  }


  /*
   =========================
   MOBILE / TABLET – SLIDER
   =========================
*/
  @media (max-width: 1024px) {
    .custom-hero__grid {
      grid-template-columns: 1fr;
    }

    .custom-hero__slider {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
    }

    .custom-hero__slide {
      min-width: 100%;
      scroll-snap-align: start;
    }

    .custom-hero__slide img {
      height: 300px;
      width: 100%;
      object-fit: contain;
      object-position: center;
    }

    .custom-hero__content {
      position: absolute;
      inset: 0;
      justify-content: flex-end;
      padding: 20px;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
    }

    .custom-hero__content h1 {
      font-size: 20px;
    }

    .custom-hero__content p {
      font-size: 14px;
    }
  }


  /*
   =========================
   DESKTOP – ONLY CENTER TEXT
   =========================
*/
  @media (min-width: 1025px) {
    .custom-hero__slide:not(.custom-hero__slide--center) .custom-hero__content {
      display: none;
    }

    .custom-hero__slide img {
      height: 500px;
      /* adjust desktop height */
      object-fit: cover;
    }
  }

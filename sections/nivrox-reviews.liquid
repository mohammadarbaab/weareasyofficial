<section class="nivrox-reviews">
  <div class="page-width">

    <h2 class="nr-heading">What Nivrox Customers Say</h2>

    <div class="nr-wrapper">
      <button class="nr-arrow left">&#10094;</button>

      <div class="nr-slider">

        {% assign review_products = section.settings.products %}

        {% for product in review_products limit: 5 %}
        <div class="nr-card">
          
          <div class="nr-product">
            <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.title }}">
            <span class="nr-product-title">{{ product.title }}</span>
          </div>

          <div class="nr-stars">★★★★★</div>

          <p class="nr-text">
            Premium quality and perfect fit. Absolutely love this {{ product.title }} from Nivrox.
          </p>

          <span class="nr-author">— Verified Buyer</span>

        </div>
        {% endfor %}

      </div>

      <button class="nr-arrow right">&#10095;</button>
    </div>

  </div>
</section>

<style>
.nivrox-reviews {
  padding: 90px 20px;
  background: #f3f3f3;
  overflow: hidden;
}

.page-width {
  max-width: 1200px;
  margin: auto;
}

.nr-heading {
  text-align: center;
  font-size: 24px;
  letter-spacing: 2px;
  margin-bottom: 60px;
  text-transform: uppercase;
}

.nr-wrapper {
  position: relative;
  overflow: hidden;
}

.nr-slider {
  display: flex;
  gap: 25px;
  transition: transform 0.6s ease-in-out;
}

.nr-card {
  min-width: 300px;
  background: #ffffff;
  padding: 25px;
  border-radius: 14px;
  box-shadow: 0 12px 35px rgba(0,0,0,0.06);
  transition: 0.4s ease;
}

.nr-card:hover {
  transform: translateY(-6px);
}

.nr-product img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 10px;
  margin-bottom: 10px;
}

.nr-product-title {
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1px;
}

.nr-stars {
  color: #c7a14a;
  font-size: 14px;
  letter-spacing: 3px;
  margin: 10px 0;
}

.nr-text {
  font-size: 13px;
  color: #555;
  line-height: 1.6;
  margin-bottom: 18px;
}

.nr-author {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 1px;
}

.nr-arrow {
  position: absolute;
  top: 40%;
  transform: translateY(-50%);
  background: #111;
  color: #fff;
  border: none;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  cursor: pointer;
  z-index: 10;
  transition: 0.3s;
}

.nr-arrow:hover {
  background: #333;
}

.nr-arrow.left { left: -15px; }
.nr-arrow.right { right: -15px; }

@media (max-width: 768px) {
  .nr-card { min-width: 260px; }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const slider = document.querySelector(".nr-slider");
  const cards = document.querySelectorAll(".nr-card");
  const leftBtn = document.querySelector(".nr-arrow.left");
  const rightBtn = document.querySelector(".nr-arrow.right");

  let index = 0;
  const visibleCards = 3;
  const cardWidth = cards[0]?.offsetWidth + 25;

  function updateSlider() {
    slider.style.transform = `translateX(-${index * cardWidth}px)`;
  }

  rightBtn.addEventListener("click", () => {
    if (index >= cards.length - visibleCards) {
      index = 0;
    } else {
      index++;
    }
    updateSlider();
  });

  leftBtn.addEventListener("click", () => {
    if (index <= 0) {
      index = cards.length - visibleCards;
    } else {
      index--;
    }
    updateSlider();
  });

  setInterval(() => {
    if (index >= cards.length - visibleCards) {
      index = 0;
    } else {
      index++;
    }
    updateSlider();
  }, 4000);
});
</script>

{% schema %}
{
  "name": "Nivrox Premium Reviews",
  "settings": [
    {
      "type": "product_list",
      "id": "products",
      "label": "Select Products for Reviews",
      "limit": 5
    }
  ],
  "presets": [
    {
      "name": "Nivrox Premium Reviews"
    }
  ]
}
{% endschema %}